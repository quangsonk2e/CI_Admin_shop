<?php
defined('BASEPATH') OR exit('No direct script access allowed');

class MY_Controller extends CI_Controller {

 public function __construct()
 {
  parent::__construct();
  $url=$this->uri-
  switch ($url) {
  	case 'admin':
  		 if(!$this->session->userdata('id'))
  			{   				redirect('admin/login');
  			}
  		break;
  	
  	default:
  		
  		break;
  }
 
  }
 }
 ?>